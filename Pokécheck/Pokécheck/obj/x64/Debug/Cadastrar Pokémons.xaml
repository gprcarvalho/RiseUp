        <TextBlock x:ConnectionId='20' HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="57" Width="197" FocusVisualPrimaryBrush="White" Foreground="White" FontSize="36" FontFamily="Comic Sans MS"                                               Margin="691,584,0,0"><Run Text="Habilidade"/><Run Text=":"/></TextBlock>
        <TextBlock x:ConnectionId='21' HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="106" Width="137" FocusVisualPrimaryBrush="White" Foreground="White" FontSize="36" FontFamily="Comic Sans MS"                                               Margin="691,482,0,0"><Run Text="Peso"/><Run Text=":"/></TextBlock>
